@model VmProduct
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="page-heading">
        <div class="container expanded">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>
                            Welcome to
                            <br>
                            <em>Our Products.</em>
                        </h2>
                        <span>Home / <em> Our Shop</em></span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="all-products-grid">
        <div class="container expanded">
            <div class="row">
                <div class="col-lg-3">
                    <div class="sidebar-filter">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="sidebar-widget search-box">
                                    <input type="search" placeholder="Type here to search...">
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-widget search-filter">
                                    <h4>Search Filter</h4>
                                    <div class="select">
                                        <select id="collection">
                                            <option value="default" selected>Collection Type</option>
                                            <option value="men">Men Collection</option>
                                            <option value="women">Women Collection</option>
                                            <option value="kids">Kids Collection Type</option>
                                        </select>
                                    </div>
                                    <div class="select">
                                        <select id="color">
                                            <option value="default" selected>Product Color</option>
                                            <option value="red">Red Color</option>
                                            <option value="blue">Blue Color</option>
                                            <option value="Green">Green Color</option>
                                        </select>
                                    </div>
                                    <div class="select">
                                        <select id="size">
                                            <option value="default" selected>Product Color</option>
                                            <option value="red">Red Color</option>
                                            <option value="blue">Blue Color</option>
                                            <option value="Green">Green Color</option>
                                        </select>
                                    </div>
                                    <div class="select">
                                        <select id="price">
                                            <option value="default" selected>Price Range</option>
                                            <option value="0-50">$0-$50</option>
                                            <option value="50-100">$50-$100</option>
                                            <option value="100+">$100+</option>
                                        </select>
                                    </div>
                                    <button type="submit" id="form-submit" class="main-dark-button">Search Now</button>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-widget products-categories">
                                    <h4>Products Categories</h4>
                                    <ul>
                                        <li>
                                            <a href="#">Women Collection <em>36</em></a>
                                        </li>
                                        <li>
                                            <a href="#">Men Collection <em>43</em></a>
                                        </li>
                                        <li>
                                            <a href="#">Kids Collection <em>62</em></a>
                                        </li>
                                        <li>
                                            <a href="#">Accesories <em>36</em></a>
                                        </li>
                                        <li>
                                            <a href="#">Hot Deals <em>8</em></a>
                                        </li>
                                        <li>
                                            <a href="#">New Arrivals <em>24</em></a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="sidebar-widget promotion-widget">
                                    <a href="#">
                                        <div class="thumb">
                                            <img src="/img/new-arrival-ads.jpeg" alt="">
                                            <div class="inner-content">
                                                <span class="banner">New Arrivals</span>
                                                <h4>
                                                    Livia fenco - Fashion
                                                    <br>
                                                    <em>new arrival.</em>
                                                </h4>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="row">
                                @foreach (var item in Model.Products)
                                {
                                    <div class="col-lg-3">
                                        <div class="recent-item">
                                            <div class="thumb">
                                                <div class="hover-contet">
                                                    <ul class="icons">
                                                        <li>
                                                            <a href="#"><i class="fa-solid fa-heart"></i></a>
                                                        </li>
                                                        <li>
                                                            <a href="product-details.html"><i class="fa-solid fa-eye"></i></a>
                                                        </li>
                                                        <li>
                                                            <a href="#"><i class="fa-solid fa-basket-shopping"></i></a>
                                                        </li>
                                                    </ul>
                                                </div>
                                                <img src="~/Uploads/@item.ColorToProducts.FirstOrDefault().ProductImages.FirstOrDefault().Image" alt="">
                                            </div>
                                            <div class="down-content">
                                                <h4><a href="product-details.html">@item.Name</a></h4>
                                                <span class="price">$@item.ColorToProducts.FirstOrDefault().SizeColorToProducts.FirstOrDefault().Price</span>
                                            </div>
                                        </div>
                                    </div>

                                }

                                <nav aria-label="...">
                                    <ul class="pagination">
                                        <li class="page-item @(Model.Page==1?"disabled":"")">
                                            <a class="page-link pageItemCount" asp-controller="product" asp-action="index" asp-route-page="@(Model.Page-1)" asp-route-itemCount="@Model.ItemCount" asp-route-searchData="@Model.searchData">Previous</a>
                                        </li>
                                        @for (int i = 1; i <= Model.PageCount; i++)
                                        {
                                            <li class="page-item @(Model.Page==i?"active":"")" aria-current="page">
                                                <a class="page-link pageItemCount" asp-controller="product" asp-action="index" asp-route-page="@i" asp-route-itemCount="@Model.ItemCount" asp-route-searchData="@Model.searchData">@i</a>
                                            </li>
                                        }
                                        <li class="page-item @(Model.Page==Model.PageCount?"disabled":"")">
                                            <a class="page-link pageItemCount" asp-controller="product" asp-action="index" asp-route-page="@(Model.Page+1)" asp-route-itemCount="@Model.ItemCount" asp-route-searchData="@Model.searchData">Next</a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-lg-12"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="fenco-info">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="info-item">
                        <div class="inner-content">
                            <div class="left-logo">
                                <i class="fa-solid fa-truck"></i>
                            </div>
                            <div class="right-text">
                                <h6>Free Shipping</h6>
                                <span>Free, fast & secure delivery within 24h.</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="info-item">
                        <div class="inner-content">
                            <div class="left-logo">
                                <i class="fa-solid fa-shield-blank"></i>
                            </div>
                            <div class="right-text">
                                <h6>Secure Payment</h6>
                                <span>Up to 12 months open for support tickets.</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="info-item">
                        <div class="inner-content">
                            <div class="left-logo">
                                <i class="fa-solid fa-arrow-rotate-left"></i>
                            </div>
                            <div class="right-text">
                                <h6>30 Days Return</h6>
                                <span>30 days free returns for unhappy products.</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

