
@{
    ViewData["Title"] = "Index";
}

<main>
    <section id="second-page-heading">
        <div class="container expanded">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>
                            Welcome to
                            <br>
                            <em>Our Cart.</em>
                        </h2>
                        <span>Home / Our Shop / Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="content-area">
        <div class="container">
            <div class="row">
                <div class="site-main col-sm-12 full-width">
                    <div class="entry-content">
                        <form class="cart-form" action="#" method="post">
                            <table class="shop_table shop_table_responsive cart-form__contents">
                                <thead>
                                    <tr>
                                        <th></th>
                                        <th></th>
                                        <th>Product</th>
                                        <th>Price</th>
                                        <th>Quantity</th>
                                        <th>Subtotal</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr class="cart-form cart_item">
                                        <td class="product-remove">
                                            <a href="#" class="remove">
                                                <i class="fa-solid fa-x"></i>
                                            </a>
                                        </td>
                                        <td class="product-thumbnail">
                                            <a href="#">
                                                <img src="/img/Hyper-shoe.jpeg" class="attachment-thumbnail size-thumbnail" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name" data-title="Product">
                                            <a href="#">Hyper shoe</a>
                                        </td>
                                        <td class="product-price" data-title="Price">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol">$</span>
                                                <span class="total" id="calculation">100</span>
                                            </span>
                                        </td>
                                        <td class="product-quantity" data-title="Quantity">
                                            <div class="counter">
                                                <button type="button" class="decrease prev btn">-</button>
                                                <button type="button" class="show-number btn" id="buttonCountNumber">1</button>
                                                <button type="button" class="increase next btn">+</button>
                                            </div>
                                        </td>
                                        <td class="product-subtotal " data-title="Subtotal">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol ">$</span>
                                                <span class="total" id="calculation">100</span>
                                            </span>
                                        </td>
                                    </tr>
                                    <tr class="cart-form cart_item" data-price="100" data-name="..." data-nese="">
                                        <td class="product-remove">
                                            <a href="#" class="remove">
                                                <i class="fa-solid fa-x"></i>
                                            </a>
                                        </td>
                                        <td class="product-thumbnail">
                                            <a href="#">
                                                <img src="/img/Hyper-shoe.jpeg" class="attachment-thumbnail size-thumbnail" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name" data-title="Product">
                                            <a href="#">Hyper shoe</a>
                                        </td>
                                        <td class="product-price" data-title="Price">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol">$</span>
                                                <span class="calculation">100</span>
                                            </span>
                                        </td>
                                        <td class="product-quantity" data-title="Quantity">
                                            <div class="counter">
                                                <button type="button" class="decrease prev btn">-</button>
                                                <button type="button" class="show-number btn" id="buttonCountNumber">4</button>
                                                <button type="button" class="increase next btn ">+</button>
                                            </div>
                                        </td>
                                        <td class="product-subtotal " data-title="Subtotal">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol ">$</span>
                                                <span class="calculation">100</span>
                                            </span>
                                        </td>
                                    </tr>

                                    <tr class="cart-form cart_item">
                                        <td class="product-remove">
                                            <a href="#" class="remove">
                                                <i class="fa-solid fa-x"></i>
                                            </a>
                                        </td>
                                        <td class="product-thumbnail">
                                            <a href="#">
                                                <img src="/img/Hyper-shoe.jpeg" class="attachment-thumbnail size-thumbnail" alt="">
                                            </a>
                                        </td>
                                        <td class="product-name" data-title="Product">
                                            <a href="#">Hyper shoe</a>
                                        </td>
                                        <td class="product-price" data-title="Price">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol ">$</span>
                                                <span class="calculation">70</span>
                                            </span>
                                        </td>
                                        <td class="product-quantity" data-title="Quantity">
                                            <div class="counter">
                                                <button type="button" class="decrease prev btn">-</button>
                                                <button type="button" class="show-number btn" id="buttonCountNumber">1</button>
                                                <button type="button" class="increase next btn ">+</button>
                                            </div>
                                        </td>
                                        <td class="product-subtotal " data-title="Subtotal ">
                                            <span class="price-amount amount">
                                                <span class="price-currencySymbol ">$</span>
                                                <span id="calculation">70</span>
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </form>
                        <div class="cart-collaterals ">
                            <div class="cart_totals ">
                                <h2>Cart totals</h2>
                                <table class="shop_table shop_table_responsive ">
                                    <tbody>
                                        <tr class="cart-subtotal ">
                                            <th>Subtotal</th>
                                            <td data-title="Subtotal ">
                                                <span class="price-amount amount ">
                                                    <span class="price-currencySymbol ">$</span> 170
                                                </span>
                                            </td>
                                        </tr>
                                        <tr class="order-total ">
                                            <th>Total</th>
                                            <td data-title="Total ">
                                                <strong>
                                                    <span class="price-amount amount ">
                                                        <span class="price-currencySymbol ">$</span> 170
                                                    </span>
                                                </strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="wc-proceed-to-checkout ">
                                    <button type="button " class="btn btn-dark ">buy</button>
                                </div>
                            </div>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </section>
    <section id="fenco-info">
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <div class="info-item">
                        <div class="inner-content">
