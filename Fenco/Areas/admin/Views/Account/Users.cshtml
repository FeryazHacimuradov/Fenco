@model VmUser
@{
    ViewData["Title"] = "Users";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mb-3">
            <a asp-area="admin" asp-controller="account" asp-action="register" class="btn btn-primary">Create New Account</a>
        </div>
        <hr />
        <div class="col-lg-12">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Surname</th>
                        <th scope="col">UserName</th>
                        <th scope="col">Roles</th>
                        <th scope="col">Email</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model.CustomUsers)
                    {
                        i++;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.UserName</td>
                            <td>@Model.UserRoles.FirstOrDefault(ur => ur.Key == item.Id).Value</td>
                            <td>@item.Email</td>
                            <td>
                                <a asp-area="admin" asp-controller="account" asp-action="userupdate" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                <a asp-area="admin" asp-controller="blog" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

