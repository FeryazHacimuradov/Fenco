@model Fenco.Models.BlogImage

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Details</h1>

            <div>
                <h4>BlogImage</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-12 mb-3">
                        @Html.DisplayNameFor(model => model.Image)
                    </dt>
                    <dd class="col-sm-12">
                        <img src="~/Uploads/@Model.Image" alt="Alternate Text" width="700"/>
                    </dd>
                </dl>
            </div>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">Edit</a> |
                <a asp-action="Index" class="btn btn-warning">Back to List</a>
            </div>
        </div>
    </div>
</div>

